{
  "name": "goatcolor",
  "description": "The only color picker palette generator you need.",
  "version": "2.0.6",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "check": "eslint . --max-warnings=0 && svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "clean": "rimraf build dist .svelte-kit node_modules .vitest coverage",
    "dev": "vite",
    "fix": "bun run lint -- --fix",
    "format": "prettier . --write",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "preview": "vite preview",
    "repo:back": "repomix -c .repomix/repomix.src.back.json",
    "repo:front": "repomix -c .repomix/repomix.src.front.json",
    "repo:full": "repomix -c .repomix/repomix.full.json",
    "repo:skel": "repomix -c .repomix/repomix.skel.json",
    "repo:src": "repomix -c .repomix/repomix.src.json",
    "repo:tool": "repomix -c .repomix/repomix.tool.json"
  },
  "dependencies": {
    "apca-w3": "^0.1.9",
    "color-name-list": "^14.29.0",
    "culori": "^4.0.2",
    "jspdf": "^4.1.0",
    "lucide-svelte": "^0.562.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/node": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/apca-w3": "^0.1.3",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-better-tailwindcss": "^4.0.2",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rimraf": "^6.1.2",
    "svelte": "^5.49.1",
    "svelte-check": "^4.3.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "trustedDependencies": [
    "core-js"
  ]
}
